<body>
    
    <div class="container">
        <form>
            <div class="form-group">
              <label for="exampleFormControlInput1">Título</label>
              <input type="text" class="form-control" id="titulo" placeholder="Titulo descriptivo" maxlength='60'>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Categoria</label>
                <textarea class="form-control" id="categorias" rows="1"></textarea>
                <p class="idCategoria"></p>
              </div>
              <div class="form-group">
                <label for="precio">Precio</label>
                <input type="text" class="form-control" id="precio" placeholder="Coloque el precio">
             </div>
            
            <label for="condicion">Condición</label>
            <br>
             <div class="form-check ">
                <input type="radio" class="form-check-input"  name="condition" value="nuevo">
                <label class="form-check-label" for="exampleCheck1">Nuevo</label>
              </div>
             
              <div class="form-check col-md-4">
                  <input type="radio" class="form-check-input" name="condition" value="usado">
                  <label class="form-check-label" for="exampleCheck1">Usado</label>
                </div>
     
          </form>


    </div>



